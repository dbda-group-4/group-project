{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Creating Lambda",
    "Resources": {
        "MyLambdaFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Handler": "lambda.lambda_handler",
                "Role": "arn:aws:iam::912139560145:role/lambda-cft",
                "FunctionName": {
                    "Ref": "functionname"
                },
                "Code": {
                    "S3Bucket": "group4project",
                    "S3Key": "lambda.zip"
                },
                "Runtime": "python3.6",
                "Timeout": "25"
            }
        }
    },
    "Parameters": {
        "functionname": {
            "Type": "String"
        }
    }
}
